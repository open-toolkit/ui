{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"moduleResolution": "bundle",
		"esModuleInterop": true,
		"sourceMap": true,
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			}
		],
		"lib": ["esnext", "dom"]
	},
	"include": ["src/**/*", "modules.d.ts"],
	"exclude": ["node_modules", "public"]
}
