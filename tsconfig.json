{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"outDir": "./public/js",
		"sourceMap": true,
		"moduleResolution": "node",
		"lib": [
			"esnext",
			"dom"
		],
		"paths": {
			"@src/*": [
				"./src/*"
			],
			"@lib/*": [
				"./lib/*"
			]
		}
	},
	"include": [
		"src/**/*",
		"lib/**/*"
	],
	"exclude": [
		"node_modules",
		"public"
	]
}
