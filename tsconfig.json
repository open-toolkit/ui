{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"outDir": "./public/js",
		"sourceMap": true,
		"inlineSources": true,
		"moduleResolution": "node",
		"plugins": [{ "name": "typescript-plugin-css-modules" }],
		"lib": ["esnext", "dom"],
		"paths": {
			"@src/*": ["./src/*"],
			"@lib/*": ["./lib/*"]
		}
	},
	"include": ["src/**/*", "lib/**/*"],
	"exclude": ["node_modules", "public"]
}
