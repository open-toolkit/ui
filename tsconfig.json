{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			}
		],
		"lib": ["esnext", "dom"],
		"paths": {
			"@src/*": ["./src/*"],
			"@lib/*": ["./lib/*"]
		}
	},
	"include": ["src/**/*", "lib/**/*"],
	"exclude": ["node_modules", "public"]
}
